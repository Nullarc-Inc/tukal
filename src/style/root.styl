
:root {
  --vs-primary: $vs-colors['primary']
  --vs-secondary: $vs-colors['secondary']
  --vs-danger: $vs-colors['danger']
  --vs-success: $vs-colors['success']
  --vs-dark: $vs-colors['dark']
  --vs-warning: $vs-colors['warning']
  --vs-light: $vs-colors['light']
  --vs-color: $vs-colors["color"]
  --vs-background: $vs-colors["background"]
  --vs-text: $vs-colors["text"]
}


::-webkit-scrollbar-track
{
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.1);
	border-radius: 8px;
	background-color: #F5F5F5;
}

::-webkit-scrollbar
{
	width: 8px;
	background-color: #F5F5F5;
}

::-webkit-scrollbar-thumb
{
	border-radius: 8px;
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
	background-color: #555;
}