{
  "compilerOptions": {
	"target": "es6",
	"module": "es6",
	"moduleResolution": "node",
	"strict": false,
	"jsx": "preserve",
	"sourceMap": true,
	"skipLibCheck": true,
	"resolveJsonModule": true,
	"isolatedModules": true,
	"esModuleInterop": true,
	"baseUrl": ".",
	"lib": ["esnext", "dom","dom.iterable", "scripthost"],
	"paths": {
		"@/*": ["src/*"]
	}
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
